<!DOCTYPE html>
% my @topics = @{stash('topics') // []};
<html>
	<head>
	</head>
	<body>
		<h1>RSS::Social - Main page</h1>
		<h2>Topics</h2>
		<ul>
% for my $topic (@topics) {
			<li>
				<p><%= $topic->name %></p>
				<p><a href="/rs/<%=$topic->slug%>">Visit the topic</a></p>
				<p><%= $topic->description%></p>
			</li>
% }
		</ul>
	</body>
</html>
