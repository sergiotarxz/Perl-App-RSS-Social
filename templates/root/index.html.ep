% layout 'root';
% my @topics = @{stash('topics') // []};
<div class="titles">
	<h1>RSS::Social - Main page</h1>
	<h2>Topics</h2>
</div>
<div class="list-topics">
% for my $topic (@topics) {
	<article>
				<h3><%= $topic->name %></h3>
				<p><a href="/rs/<%=$topic->slug%>">Visit the topic</a></p>
				<p><%= $topic->description%></p>
	</article>
% }
</div>
