% layout 'root';
% my $topic = stash('topic');
% my @messages = @{stash('messages')};
<div class="titles">
	<h1>RSS::Social - Topic View</h1>
	<h2><%= $topic->name %></h2>
	<p><%= $topic->description%></p>
	<h2>Messages</h2>
</div>
<div class="list-topic-messages">
% for my $message (@messages) {
%=	include 'components/message', message => $message;
% }
</div>
